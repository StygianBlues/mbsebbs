#!/bin/sh
# preinst script for mbsebbs
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

#  Set old_version variable for use later in the script.
old_version=$2

#   Remove these dpkg-statoverride settings, as the package
# is no longer using that in debian/postinst to set it.
drop_statoverride() {
    for file in /opt/mbsebbs/bin/mbtask /opt/mbsebbs/bin/mbtask \
        /opt/mbsebbs/bin/mbuser /opt/mbsebbs/bin/mbuseradd \
        /opt/mbsebbs/bin/mbpasswd /opt/mbsebbs/bin/mblogin \
        /opt/mbsebbs/tmp /opt/mbsebbs/etc;
    do
        if dpkg-statoverride --list $file >/dev/null; then
            dpkg-statoverride --remove $file
        fi
    done
}

case "$1" in
    install)
        # configure 'mbsebbs' user and 'bbs' group
        getent group bbs >/dev/null 2>&1 || addgroup --system bbs
        getent passwd mbsebbs >/dev/null 2>&1 || adduser --system --quiet --home /usr/lib/mbsebbs --ingroup bbs --shell /bin/bash --gecos "MBSE BBS Admin" mbse || adduser mbse uucp || adduser mbsebbs dialout || adduser mbsebbs dip
        getent passwd bbs >/dev/null 2>&1 || adduser --system --quiet --home /var/lib/mbsebbs/home/bbs --ingroup bbs --shell /usr/lib/mbsebbs/bin/mbnewusr --gecos "MBSE BBS Login" bbs || passwd -d bbs
    ;;

    upgrade)
        # If both '/opt/mbse' and '/usr/share/mbsebbs' are present and
        # if /usr/lib/mbsebbs is not already present; it is assumed
        # that '/opt/mbse' is from the package package install. Update
        # package installation directories to the more standard layout.
        if [ -e "/opt/mbse" || -e "/usr/share/mbsebbs" ]; then
            if [ ! -e "/var/lib/mbsebbs" ]; then
                mv /opt/mbse/etc /var/lib/mbsebbs
            fi
            if [ ! -e "/usr/lib/mbsebbs" ]; then
                mv /opt/mbse /usr/lib/mbsebbs
            fi
        fi
        #  Remove these settings as dpkg-statoverride is no longer being used
        #  in debian/postinst to set it.
        if dpkg --compare-versions $2 lt 0.92.0+111209-2; then
            drop_statoverride;
        fi
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


